



<h1>You made it to INDEX activities, ya</h1>


<%= link_to "Bike", pops_bike_path, {:class => "btn btn-primary"} %>
<%= link_to "Run", pops_run_path, {:class => "btn btn-primary"} %>
<%= link_to "Swimming", pops_swimming_path, {:class => "btn btn-primary"} %>
<%= link_to "Racquetball", pops_racquetball_path, {:class => "btn btn-primary"} %>



<table class="table table-striped table-hover">
<tr>
	<td><h3>Activity</h3></td>
	<td><h3>Leader</h3></td>
	<td><h3>Time</h3></td>
	<td><h3>Location</h3></td>
	<td><h3>Description</h3></td>
	<td><h3>Distance</h3></td>
	<td><h3>Show</h3></td>
</tr>

<% @sorted.each do |to_do| %>
<tr>
	<td><%= to_do[0].activity %></td>
	<td><%= to_do[0].users[0].email %></td>
	<td><%= to_do[0].time %></td>
	<td><%= to_do[0].address %></td>
	<td><%= to_do[0].description %></td>
	<td><%= to_do[1].round(2) %></td>
	<td><%= link_to to_do[0].activity, to_do[0] %></td>
</tr>

<% end %>
</table>

