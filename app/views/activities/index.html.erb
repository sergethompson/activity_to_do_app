
<div class="container">


<h1>You made it to INDEX activities, ya</h1>

<%= link_to "", pops_bike_path, {:class => "img-responsive row col-md-6 img-rounded col-md-* bike"} %>
<%= link_to "", pops_run_path, {:class => "img-responsive row col-md-6 img-rounded col-md-* run"} %>
<%= link_to "", pops_swimming_path, {:class => "img-responsive row col-md-6 img-rounded col-md-* swim"} %>
<%= link_to "", pops_racquetball_path, {:class => "img-responsive row col-md-6 img-rounded  col-md-* racquetball"} %>
<div class="container">
	<%= link_to "New Activity", new_activity_path, {:class => "btn btn-warning pull-right"} %>
</div>

<div class="table-responsive">
<table class="table table-striped table-hover">
<tr>
	<td><h3>Activity</h3></td>
	<td><h3>Leader</h3></td>
	<td><h3>Time</h3></td>
	<td><h3>Location</h3></td>
	<td><h3>Description</h3></td>
	<td><h3>Distance</h3></td>
	<td><h3>Show</h3></td>
</tr>

<% @sorted.each do |to_do| %>
<tr>
	<td><%= to_do[0].activity %></td>
	<td><%= to_do[0].users[0].email %></td>
	<td><%= to_do[0].time %></td>
	<td><%= to_do[0].address %></td>
	<td><%= to_do[0].description %></td>
	<td><%= to_do[1].round(2) %></td>
	<td><%= link_to to_do[0].activity, to_do[0] %></td>
</tr>

<% end %>
</table>
</div>


</div>