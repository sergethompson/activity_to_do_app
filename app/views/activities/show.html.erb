
<h1><%= @activity.activity %></h1><br>


<div class="row col-md-6 col-md-*">
	<h3>Address:<small> <%= @activity.address %></small></h3><br>
	<h3>Author:<small> <%= @activity.users[0].email %></small></h3><br>
</div>

<div class="row col-md-6 col-md-*">
	<h3>Current Location:<small> <%= @s[0].address %></small></h3><br>
	<h3>Distance to:<small> <%= @activity.distance_to(@s[0].address) %></small></h3><br>
</div>

<img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @activity.address %>&zoom=13&size=600x300&maptype=roadmap
&markers=color:blue%7Clabel:A%7C<%= @activity.latitude %>,<%= @activity.longitude %>&markers=color:green%7Clabel:G%7C40.711614,-74.012318
&markers=color:red%7Ccolor:red%7Clabel:C%7C40.718217,-73.998284&sensor=false" alt=""><br>




lat: <%= @activity.latitude %><br>
lon: <%= @activity.longitude %><br>


<h3>New Group</h3>
<% @activity.users.each do |x| %>
	<%= x.email %><br>
<% end %>

<% if current_user %>
<form action="/activity_users" method="post">
	<input type="hidden" name="activity" value="<%=@activity.id%>">
	<input type="hidden" name="user" value="<%=@user.id%>">
	<button class="btn btn-primary" id="submit">Join Activity</button>
	<input name="authenticity_token" 
                            type="hidden" 
                            value="<%= form_authenticity_token %>" />
</form>
<% else %>
	<%= link_to "Sign in to join", new_user_session_path, {:class => "btn btn-primary"} %>
<% end %>





<h3>Nearby Activities</h3>


<ul>
<% for location in @activity.nearbys(3000) %>
<li><%= link_to location.activity, location %> (<%= location.distance %>)miles</li>

<% end %>
</ul>

