<div class="jumbotron sign_in">
  <br>
  <br>
  <br>
<h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div style="width:20em;">
    <div class="input-group margin-bottom-sm">
    <%= f.email_field :email, placeholder: "Email address", :autofocus => true, class: "form-control" %>
    </div>

    <div class="input-group">
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>
